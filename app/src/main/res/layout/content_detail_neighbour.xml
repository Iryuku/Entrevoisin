<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#DBD6D6"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".ui.neighbour_list.DetailNeighbourActivity"
    tools:showIn="@layout/activity_detail_neighbour">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp">
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            app:cardCornerRadius="5dp"
            app:cardMaxElevation="@dimen/cardview_default_elevation"
            tools:ignore="PrivateResource">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        >

        <TextView
            android:id="@+id/info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/person_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profil"
            android:paddingStart="20dp"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry"
            android:layout_marginTop="10dp"/>
            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="localisation"
            android:paddingStart="20dp"
            android:textSize="12sp"
            android:drawableStart="@drawable/ic_location_on_black_24dp"
            android:drawablePadding="5dp"
            android:singleLine="true"
            tools:ignore="RtlSymmetry"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_phone_black_24dp"
            android:drawablePadding="5dp"
            android:paddingStart="20dp"
            android:singleLine="true"
            android:text="numéro"
            android:textSize="12sp"
            tools:ignore="RtlSymmetry"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_language_black_24dp"
            android:drawablePadding="5dp"
            android:paddingStart="20dp"
            android:singleLine="true"
            android:text="www.facebook.fr/@+id/person_name"
            android:textSize="12sp"
            tools:ignore="RtlSymmetry"
            android:layout_marginTop="20dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        app:cardCornerRadius="5dp"
        app:cardMaxElevation="@dimen/cardview_default_elevation"
        tools:ignore="PrivateResource">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A propos de moi"
            android:paddingStart="20dp"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="50dp"
            android:paddingStart="20dp"
            android:layout_marginBottom="20dp"
            tools:ignore="RtlSymmetry"
            android:text="Bonjour!Je souhaiterais faire de la marche nordique.
            Pas initiée, je recherche une ou plusieurs personnes
            suceptibles de m'accompagner!J'aime les jeux de
            cartes tels la belote et le tarot..."/>
    </android.support.v7.widget.CardView>
    </LinearLayout>
    </android.support.v4.widget.NestedScrollView >